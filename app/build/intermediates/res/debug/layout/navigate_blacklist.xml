<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E4E2"
    tools:context=".navigate_blacklist" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_below="@+id/add"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        </ListView>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/remove"
            android:background="@drawable/ic_action_discard"
            android:layout_marginRight="52dp"
            android:layout_marginEnd="52dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/add"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/ic_action_add_group"/>


    </RelativeLayout>


</FrameLayout><!-- From: file:/F:/Github/handsfree/handsfree/app/src/main/res/layout/navigate_blacklist.xml -->